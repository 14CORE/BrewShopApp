<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FillParent"
    android:background="@color/color_gray">

    <LinearLayout style="@style/FillParent"
        android:orientation="vertical">

        <TextView style="@style/RecipeHeader"
            android:text="Yeast"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drop_shadow">

        <LinearLayout
            style="@style/FillParent"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/RecipeEditLabel"
                    android:text="Yeast Type" />

                <Spinner
                    android:id="@+id/yeast_type"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/RecipeEditLabel"
                    android:text="Attenuation" />

                <EditText style="@style/RecipeEditValue"
                    android:id="@+id/yeast_attenuation"
                    android:hint=""
                    android:inputType="number"
                    android:maxLength="3"/>

                <TextView
                    style="@style/RecipeEditUnit"
                    android:text="%" />

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <LinearLayout style="@style/FillParent"
        android:id="@+id/description_layout"
        android:orientation="vertical">

        <TextView style="@style/RecipeHeader"
            android:text="Description"
            android:layout_marginLeft="5dp"/>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drop_shadow">

            <TextView android:id="@+id/description"
                android:background="@drawable/touchable"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minHeight="48dp"
                android:padding="5dp"
                android:singleLine="false"
                android:gravity="center_vertical"
                android:text="Description"
                android:textSize="14sp"/>

        </FrameLayout>
        </LinearLayout>
</LinearLayout>
</ScrollView>