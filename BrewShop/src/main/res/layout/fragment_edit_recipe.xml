<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FillParent"
    android:background="@color/color_gray">

    <LinearLayout style="@style/FillParent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView style="@style/Card">

        <LinearLayout android:id="@+id/recipe_stats_layout"
            android:padding="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/touchable"
            android:orientation="vertical">

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/recipe_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_primary"/>

            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">
                <TextView style="@style/RecipeHeader"
                    android:id="@+id/recipe_name"
                    android:text="Recipe Name"
                    android:gravity="top"/>
                <TextView android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:id="@+id/recipe_style"
                    android:text="Dry Irish Stout"
                    android:textColor="@color/text_dark_secondary"
                    android:layout_weight="2"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_margin="2dp"
            android:background="@color/color_gray"/>

        <LinearLayout android:layout_width="fill_parent"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView style="@style/RecipeStat"
                    android:text="Batch Vol."/>
                <TextView style="@style/RecipeStat"
                    android:text="Boil Vol."/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView style="@style/RecipeStatRight"
                    android:id="@+id/batch_volume"
                    android:text="5.0 gal"/>
                <TextView style="@style/RecipeStatRight"
                    android:id="@+id/boil_volume"
                    android:text="5.5 gal"/>
            </LinearLayout>
            <View
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>
            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">
                <TextView style="@style/RecipeStat"
                    android:text="Boil Time"/>
                <TextView style="@style/RecipeStat"
                    android:text="Efficiency"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView style="@style/RecipeStatRight"
                    android:id="@+id/boil_time"
                    android:text="60 min"/>
                <TextView style="@style/RecipeStatRight"
                    android:id="@+id/efficiency"
                    android:text="70%"/>
            </LinearLayout>
        </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Calculated Stats"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Style"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"/>
                </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_margin="2dp"
            android:background="@color/color_gray"/>

        <LinearLayout style="@style/RecipeGroupLayout"
            android:orientation="horizontal">
            <LinearLayout style="@style/FillParent"
                android:layout_weight="1.5"
                android:orientation="vertical">
                <TextView style="@style/RecipeStat"
                    android:text="OG"/>
                <TextView style="@style/RecipeStat"
                    android:text="IBU"/>
                <TextView style="@style/RecipeStat"
                    android:text="SRM"/>
                <TextView style="@style/RecipeStat"
                    android:text="FG"/>
                <TextView style="@style/RecipeStat"
                    android:text="% ABV"/>
                <TextView style="@style/RecipeStat"
                    android:text="Calories"/>
            </LinearLayout>
            <LinearLayout style="@style/FillParent"
                android:layout_weight="1.5"
                android:layout_marginRight="5dp"
                android:orientation="vertical">
                <TextView style="@style/RecipeStatRight"
                    android:text="1.050"/>
                <TextView style="@style/RecipeStatRight"
                    android:text="20"/>
                <TextView style="@style/RecipeStatRight"
                    android:text="10"/>
                <TextView style="@style/RecipeStatRight"
                    android:text="~1.012"/>
                <TextView style="@style/RecipeStatRight"
                    android:text="~4.7"/>
                <TextView style="@style/RecipeStatRight"
                    android:text="~110"/>
            </LinearLayout>
            <View
                android:layout_height="fill_parent"
                android:layout_width="0.5dp"
                android:layout_margin="5dp"
                android:background="@color/color_gray"/>
            <LinearLayout style="@style/FillParent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView style="@style/RecipeStatRight"
                    android:id="@+id/style_og"
                    android:text="1.050 - 1.060"/>
                <TextView style="@style/RecipeStatRight"
                    android:id="@+id/style_ibu"
                    android:text="10 - 20"/>
                <TextView style="@style/RecipeStatRight"
                    android:id="@+id/style_srm"
                    android:text="10 - 20"/>
                <TextView style="@style/RecipeStatRight"
                    android:id="@+id/style_fg"
                    android:text="1.010 - 1.011"/>
                <TextView style="@style/RecipeStatRight"
                    android:id="@+id/style_abv"
                    android:text="1.3 - 2.4"/>
            </LinearLayout>
        </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout android:layout_width="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">

            <TextView style="@style/RecipeHeader"
                android:text="@string/ingredients"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:minWidth="48dp"
                android:id="@+id/new_ingredient_view"
                android:layout_height="48dp"
                android:gravity="bottom|right"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="NEW"/>

        </RelativeLayout>

        <LinearLayout android:id="@+id/ingredient_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView android:id="@+id/no_ingredients"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:textColor="@color/text_dark_secondary"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="@string/no_ingredients"/>
        </LinearLayout>

        <TextView style="@style/RecipeHeader"
            android:text="Notes"
            android:layout_marginLeft="5dp"/>

        <android.support.v7.widget.CardView style="@style/Card">

        <TextView android:id="@+id/recipe_notes"
            android:background="@drawable/touchable"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:minHeight="48dp"
            android:padding="5dp"
            android:singleLine="false"
            android:gravity="center_vertical"
            android:text="Notes"
            android:textSize="14sp"/>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>