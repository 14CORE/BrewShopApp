<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FillParent"
    android:background="@color/color_gray">

    <LinearLayout style="@style/FillParent"
        android:orientation="vertical">

    <TextView style="@style/RecipeHeader"
        android:text="Recipe Information"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>

        <android.support.v7.widget.CardView style="@style/Card">

        <LinearLayout
            style="@style/FillParent"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/RecipeEditLabel"
                    android:text="Recipe Name" />

                <EditText
                    android:id="@+id/recipe_name"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:hint="Enter name"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:maxLength="50"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/RecipeEditLabel"
                    android:text="Batch Volume" />

                <EditText
                    android:id="@+id/batch_volume"
                    style="@style/RecipeEditValue"
                    android:hint="Volume"
                    android:inputType="numberDecimal" />

                <TextView
                    style="@style/RecipeEditUnit"
                    android:text="gal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/RecipeEditLabel"
                    android:text="Boil Volume" />

                <EditText
                    android:id="@+id/boil_volume"
                    style="@style/RecipeEditValue"
                    android:hint="Volume"
                    android:inputType="numberDecimal" />

                <TextView
                    style="@style/RecipeEditUnit"
                    android:text="gal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/RecipeEditLabel"
                    android:text="Boil Time" />

                <EditText
                    android:id="@+id/boil_time"
                    style="@style/RecipeEditValue"
                    android:hint="Time"
                    android:inputType="number" />

                <TextView
                    style="@style/RecipeEditUnit"
                    android:text="min" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/RecipeEditLabel"
                    android:text="Efficiency" />

                <EditText
                    android:id="@+id/efficiency"
                    style="@style/RecipeEditValue"
                    android:hint="Percent"
                    android:inputType="numberDecimal" />

                <TextView
                    style="@style/RecipeEditUnit"
                    android:text="%" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/RecipeEditLabel"
                    android:text="Beer Style" />

                <Spinner
                    android:id="@+id/recipe_style"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView >

        <LinearLayout style="@style/FillParent"
            android:id="@+id/description_layout"
            android:orientation="vertical">

            <TextView style="@style/RecipeHeader"
                android:text="Style Description"
                android:layout_marginLeft="5dp"/>

            <android.support.v7.widget.CardView style="@style/Card">

                <TextView android:id="@+id/description"
                    android:background="@drawable/touchable"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:minHeight="48dp"
                    android:padding="5dp"
                    android:singleLine="false"
                    android:gravity="center_vertical"
                    android:text="Description"
                    android:textSize="14sp"/>

            </android.support.v7.widget.CardView >
        </LinearLayout>
    </LinearLayout>
</ScrollView>