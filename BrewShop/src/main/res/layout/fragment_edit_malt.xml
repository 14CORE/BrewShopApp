<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FillParent">

    <LinearLayout style="@style/FillParent"
        android:orientation="vertical">

        <TextView style="@style/RecipeHeader"
            android:text="Malt Addition"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>

        <android.support.v7.widget.CardView style="@style/Card">

        <LinearLayout
            style="@style/FillParent"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/RecipeEditLabel"
                    android:text="Malt Type" />

                <Spinner style="@style/MySpinner"
                    android:id="@+id/malt_type"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/RecipeEditLabel"
                    android:text="Weight" />

                <EditText style="@style/RecipeEditValue"
                    android:id="@+id/malt_weight_lb"
                    android:hint=""
                    android:inputType="numberDecimal"
                    android:maxLength="5">
                    </EditText>

                <TextView
                    style="@style/RecipeEditUnit"
                    android:text="lb"
                    android:layout_marginRight="10dp"/>

                <EditText style="@style/RecipeEditValue"
                    android:id="@+id/malt_weight_oz"
                    android:hint=""
                    android:inputType="numberDecimal"
                    android:maxLength="5"/>

                <TextView
                    style="@style/RecipeEditUnit"
                    android:text="oz" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/RecipeEditLabel"
                    android:text="Gravity" />

                <EditText
                    android:id="@+id/malt_gravity"
                    style="@style/RecipeEditValue"
                    android:inputType="numberDecimal"
                    android:maxLength="5"/>

                <TextView
                    style="@style/RecipeEditUnit"
                    android:text="/lb/gal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/RecipeEditLabel"
                    android:text="Color" />

                <EditText
                    android:id="@+id/malt_color"
                    style="@style/RecipeEditValue"
                    android:inputType="numberDecimal"
                    android:maxLength="5"/>

                <TextView
                    style="@style/RecipeEditUnit"
                    android:text="SRM" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout style="@style/FillParent"
        android:id="@+id/description_layout"
        android:orientation="vertical">

        <TextView style="@style/RecipeHeader"
            android:text="Description"
            android:layout_marginLeft="5dp"/>

        <android.support.v7.widget.CardView style="@style/Card">

            <TextView android:id="@+id/description"
                android:background="@drawable/touchable"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minHeight="48dp"
                android:padding="5dp"
                android:singleLine="false"
                android:gravity="center_vertical"
                android:text="Description"
                android:textSize="14sp"/>

        </android.support.v7.widget.CardView>
        </LinearLayout>
</LinearLayout>
</ScrollView>