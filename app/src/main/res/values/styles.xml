<resources>
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionModeBackground">@color/color_primary</item>
        <item name="android:activatedBackgroundIndicator">@drawable/listitem_background</item>
    </style>

    <style name="FillParent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>


    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="AppLayout" parent="AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="NavigationCategory" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_light_primary</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationList" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@color/color_primary_dark</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="ItemList" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:choiceMode">none</item>
        <item name="android:divider">@color/text_dark_divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="RecipeStat" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="RecipeStatRight" parent="RecipeStat">
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="RecipeRating">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:src">@drawable/hops</item>
    </style>

    <style name="RecipeGroupLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">1dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ClickableRecipeGroupLayout" parent="RecipeGroupLayout">
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="RecipeIngredient">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="RecipeHeader" parent="FillParent">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
